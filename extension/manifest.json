{
  "manifest_version": 3,
  "name": "FocusTube - Add Channels",
  "version": "1.0.0",
  "description": "Quickly add YouTube channels to your FocusTube dashboard with one click",
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusTube"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-script.js"],
      "css": ["content-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://focustube-phi.vercel.app/*",
    "https://ztpnqpxaqdiomymhrkhs.supabase.co/*"
  ]
}
